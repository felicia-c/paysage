{% block formcontact %}

<section id="contactform_index" class="get-in-touch">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Nous Contacter</h2>
                <h3 class="section-subheading text-muted">Un projet ? Parlons-en !</h3>
            </div>
        </div>
        <div class="row col-sm-8 col-sm-offset-2">

            {{ form_start(form, {'attr': {'class': 'contact-form row'}}) }}

            <div class="form-field col x-50">
                {{ form_widget(form.name) }}
                {{ form_label(form.email, "Nom *", {'label_attr': {'class': 'label'}}) }}
                {{ form_errors(form.name) }}
            </div>


            <div class="form-field col x-50">
                {{ form_widget(form.firstname) }}
                {{ form_label(form.email, "Prénom", {'label_attr': {'class': 'label'}}) }}
                {{ form_errors(form.firstname) }}
            </div>

            <div class="form-field col x-50">

                {{ form_widget(form.email) }}
                {{ form_label(form.email, "E-mail *", {'label_attr': {'class': 'label'}}) }}
                {{ form_errors(form.email) }}

            </div>
            <div class="form-field col x-100">
                {{ form_widget(form.message) }}
                {{ form_label(form.email, "Message *", {'label_attr': {'class': 'label textarea-label'}}) }}
                {{ form_errors(form.message) }}
            </div>

            {# Render CSRF token etc .#}
            <div style="display:none">
                {{ form_rest(form) }}
            </div>

            <div class="form-field col x-100 contact-submit">
                <input class="submit-btn" type="submit" value="Envoyer">
            </div>

            {{ form_end(form) }}







